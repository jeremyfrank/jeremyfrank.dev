---
type Props = {
  src: string
  bordered?: boolean
  width?: number | null
  caption?: string
}

const { src, bordered = false, width, caption } = Astro.props
---

<figure>
  <video width={width} class:list={{ border: bordered }} controls autoplay loop>
    <source src={src} type="video/mp4" />
  </video>
  {caption && <figcaption>{caption}</figcaption>}
</figure>

<style>
  video {
    {if bordered {
      border-color: var(--text-color);
    }}
  }
</style>
