---
export type Props = {
  title?: string
  rawTitle?: string
  description?: string
  image?: string
  pageType?: 'website' | 'article'
  canonicalURL?: URL | null
}

const {
  rawTitle,
  description,
  image,
  pageType = 'website',
  canonicalURL = new URL(Astro.request.url, Astro.site),
} = Astro.props

const defaultImage = new URL('/images/og-image.png', Astro.site)
const defaultTitle = 'Jeremy Frank'

const title =
  rawTitle ?? [Astro.props.title, defaultTitle].filter(Boolean).join(' â€“ ')
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<title>{title}</title>
<meta name="generator" content={Astro.generator} />
<meta name="viewport" content="width=device-width" />

<!-- Asset Preloads -->
<link
  rel="preload"
  href="/fonts/GeistVariableVF.woff2"
  as="font"
  type="font/woff2"
  crossorigin
/>

<!-- Page Metadata -->
{canonicalURL && <link rel="canonical" href={canonicalURL} />}
{description && <meta name="description" content={description} />}

<!-- OpenGraph Tags -->
<meta property="og:title" content={title} />
<meta property="og:type" content={pageType} />
{canonicalURL && <meta property="og:url" content={canonicalURL} />}
{description && <meta property="og:description" content={description} />}
<meta property="og:site_name" content="https://jeremyfrank.dev/" />
<meta property="og:image" content={image ?? defaultImage} />
