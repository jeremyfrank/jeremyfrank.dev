---
const url = new URL(Astro.request.url)
const isHome = url.pathname === '/' || url.pathname === '/index.html'
const LogomarkTagName = isHome ? 'div' : 'a'
const logomarkHref = !isHome ? '/' : null
const logomarkLabel = !isHome ? 'Home' : null
---

<header class="layout">
  <LogomarkTagName
    href={logomarkHref}
    class="logo-wrapper"
    aria-label={logomarkLabel}
  >
    <img
      src="/images/jf-logomark.svg"
      width="64"
      height="64"
      class="h-14 w-14 md:h-16 md:w-16 dark:invert"
      alt=""
    />
  </LogomarkTagName>
</header>

<style>
  header {
    padding-top: clamp(60px, 12dvh, 100px);
    padding-bottom: clamp(30px, 6dvh, 50px);

    @media (orientation: portrait) and (max-width: 600px) {
      padding-top: clamp(50px, 8dvh, 70px);
      padding-bottom: clamp(25px, 4dvh, 35px);
    }
  }

  .logo-wrapper {
    @apply ring ring-white dark:ring-zinc-900;
    @apply focus-visible:ring-blue-500 focus-visible:ring-offset-2;
    @apply pointer-events-auto;

    border-radius: 999px;
    margin-right: auto;
  }
</style>
